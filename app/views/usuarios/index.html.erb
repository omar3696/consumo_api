<h1>Lista de Usuarios</h1>

    <table>
    <thead>
        <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <% @usuarios.each do |usuario| %>
        <tr>
            <td><%= usuario['nombre'] %></td>
            <td><%= usuario['correo'] %></td>
            <td>
            <%= link_to 'Mostrar', usuario_path(usuario['id']) %>
            <%= link_to 'Editar', edit_usuario_path(usuario['id']) %>
            <%= link_to 'Eliminar', usuario_path(usuario['id']), method: :delete, data: { confirm: '¿Estás seguro?' } %>
            </td>
        </tr>
        <% end %>
    </tbody>
    </table>

<%= link_to 'Crear nuevo usuario', new_usuario_path %>
